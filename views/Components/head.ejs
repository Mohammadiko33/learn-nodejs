    <style>
        @font-face {
            font-family: "FiraCode";
            src: url("/views/Components/FiraCode-Medium.woff2"); /* üëà don't working */
        }
        /* üé® Reset & Base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "FiraCode", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            text-align: center;
            background: linear-gradient(135deg, #1984ff, #96bcff);
            color: #fff;
            padding: 40px 20px;
        }

        a {
            text-decoration: none;
            color: #fff;
            font-weight: 500;
            transition: 0.3s;
        }

        a:hover {
            color: #ffcc00;
        }

        /* üîπ Nav */
        nav ul {
            list-style: none;
            display: flex;
            gap: 2rem;
            position: fixed;
            top: 1.5rem;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.3);
            padding: 0.5rem 1rem;
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        /* ‚ú® Heading */
        h1 {
            margin-top: 3rem;
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            background: linear-gradient(90deg, #ff6a00, #ee0979);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: fadeInDown 1s ease;
        }

        p {
            max-width: 700px;
            font-size: 1.2rem;
            line-height: 1.8;
            color: rgba(255, 255, 255, 0.85);
            animation: fadeInUp 1.2s ease;
            margin-bottom: 2rem;
        }

        /* üîπ Form Styles */
        .form {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            width: 100%;
            max-width: 500px;
            background: rgba(255, 255, 255, 0.05);
            padding: 2rem;
            border-radius: 16px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(15px);
            animation: fadeInUp 1.5s ease;
        }

        .form input,
        .form textarea {
            padding: 0.8rem 1rem;
            border-radius: 8px;
            border: none;
            font-size: 1rem;
            outline: none;
            transition: 0.3s;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .form input::placeholder,
        .form textarea::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form input:focus,
        .form textarea:focus {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 0 3px rgba(255, 204, 0, 0.3);
        }

        .form textarea {
            resize: vertical;
            min-height: 120px;
        }

        .form button {
            padding: 0.8rem 1rem;
            border-radius: 8px;
            border: none;
            background: linear-gradient(90deg, #ff6a00, #ee0979);
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
            font-size: 1rem;
        }

        .form button:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(255, 105, 0, 0.6);
        }

        .text-404 {
            font-size: 5rem;
            color: #ff3b3b;
            text-shadow: 0 0 15px rgba(255, 0, 0, 0.7);
            animation: pulse 1.5s infinite;
        }

        /* üîπ Responsive */
        @media (max-width: 600px) {
            h1 {
                font-size: 2.2rem;
            }

            nav ul {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }
        }

        /* üîπ Animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

